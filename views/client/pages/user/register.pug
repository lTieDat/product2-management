extends ../../layout/default.pug
include ../../mixins/alert.pug
block main 
    .container.my-5 
        .col-8 
            h1(class="text-center") Đăng ký tài khoản
            form(method ="POST" action ="/user/register")
                div(class="form-group")
                    label(for="username") Tên đăng nhập
                    input(type="text" class="form-control" id="fullName" name="fullName" placeholder="Nhập tên đăng nhập" required)
                div(class="form-group")
                    label(for="email") Email
                    input(type="email" class="form-control" id="email" name="email" placeholder="Nhập email" required)
                div(class="form-group")
                    label(for="password") Mật khẩu
                    input(type="password" class="form-control" id="password" name="password" placeholder="Nhập mật khẩu" required)
                div(class="form-group")
                    br
                    button(type="submit" class="btn btn-primary") Đăng ký