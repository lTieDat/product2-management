include ../mixins/sub-menu.pug
header.header
    .container 
        .row.align-items-center 
            .col-3
                .inner-logo 
                    a(href="/") 
                        img(src=settingGeneral.logo, alt=settingGeneral.website)
            .col-5 
                form(action ="/search"
                    method= "GET")
                    div(class="form-group d-flex mb-0")
                        input(type="text", name="keyword", class="form-control", placeholder="Tìm kiếm sản phẩm" value = keyword)   
                        button(type="submit", class="btn btn-primary") Tìm kiếm
            .col-4
                .inner-menu 
                    ul 
                        li 
                            a(href="/") Trang chủ
                        li(class="sub-menu")
                            - const pathProduct ='/products';
                            a(href="/products") Sản phẩm
                                +sub-menu(productCategory,pathProduct)
                        li 
                            a(href="/cart") Giỏ hàng (#{miniCart ? miniCart.totalQuantity : 0})
                        li 
                            a(href="/chat") Chat
                        if(user)
                            li 
                                a(href="/user/profile") Xin chào #{user.fullName}
                            
                            li
                                a(href="/user/logout") Đăng xuất 
                            
                        else 
                            li  
                                a(href="/user/login") Đăng nhập
                            li
                                a(href="/user/register") Đăng ký