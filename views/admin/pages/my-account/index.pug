extends ../../layout/default.pug

block main 
    h1(class="mb-4") Thông tin tài khoản 

    if(user.avatar)
        img(src=user.avatar, alt="avatar", class="rounded-circle", style="width: 150px; height: 150px;")
    else
        img(src="/admid/images/avatar.png", alt="avatar", class="rounded-circle", style="width: 150px; height: 150px;")
    

    if(user.fullName)
        p(class="mt-3") Họ và tên: <b>#{user.fullName} </b>
    else
        p(class="mt-3") Họ và tên: Chưa cập nhật

    if(user.email)
        p(class="mt-3") Email: <b>#{user.email} </b>
    else
        p(class="mt-3") Email: Chưa cập nhật
    
    if(user.phone)
        p(class="mt-3") Số điện thoại: <b>#{user.phone} </b>
    else
        p(class="mt-3") Số điện thoại: Chưa cập nhật
    
    p 
        span Trạng thái: 
        span 
            <b> #{user.status ==="active" ? "Hoạt động" : "Khóa"} </b>
    
    if(role.title)
        p(class="mt-3") Vai trò: <b>#{role.title} </b>
    else
        p(class="mt-3") Vai trò: Chưa cập nhật

    a(href=`${prefixAdmin}/my-account/edit` class ="btn btn-primary mt-3") Chỉnh sửa thông tin
