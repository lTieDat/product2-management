extends ../../layout/default.pug
include ../../mixins/filter-status.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/form-change-multi.pug
include ../../mixins/alert.pug
include ../../mixins/sort.pug
block main
           
    h1(class="mb-4") Chỉnh sửa tài khoản 
    +alert-success(3000)
    +alert-error(3000)
    if(record)
         form(
            action =`${prefixAdmin}/accounts/edit/${record.id}?_method=PATCH`
            id="form-edit-account"
            method="POST"
            enctype="multipart/form-data"
        )
            div(class="form-group")
                label(for="name") Họ và tên
                input(
                    type="text"
                    class="form-control"
                    id="fullName"
                    name="fullName"
                    value=record.fullName
                    placeholder="Nhập họ và tên"
                    required
                )
            div(class="form-group")
                label(for="email") Email
                input(
                    type="email"
                    class="form-control"
                    id="email"
                    name="email"
                    value=record.email
                    placeholder="Nhập email"
                    required
                )
            div(class="form-group")
                label(for="password") Mật khẩu
                input(
                    type="password"
                    class="form-control"
                    id="password"
                    value=record.password
                    name="password"
                    placeholder="Nhập mật khẩu"
                    required
                )
            div(class="form-group")
                label(for="phone") Số điện thoại
                input(
                    type="text"
                    class="form-control"
                    id="phone"
                    name="phone"
                    value=record.phone
                    placeholder="Nhập số điện thoại"
                    required
                )
            div(class="form-group" upload-image)
                label(for="avatar") Hình ảnh
                input(
                    type="file"
                    class="form-control"
                    id="image"
                    name="image"
                    accept="image/*"
                )
                img(
                    src=record.avatar
                    class="img-preview"
                    upload-image-preview
                    style="max-height: 200px"
                )
            div(class="form-group")
                label(for="role") Nhóm quyền
                select(
                    class="form-control"
                    id="role_id"
                    name="role_id"
                    required
                )
                    option(value="" disable) ---Chọn nhóm quyền---
                    each role in roles
                        option(value=role.id
                            selected=(role.id == record.role_id? true : false)
                        ) #{role.title}
            div(class="form-group form-check form-check-inline")
                input(
                    type= "radio"
                    class= "form-check-input"
                    id= "statusActive"
                    value="active"
                    name="status"
                    checked = (record.status == "active" ? true : false)
                )
                label(for="statusActive" class="form-check-label") Hoạt động
            div(class="form-group form-check form-check-inline")
                input(
                    type= "radio"
                    class= "form-check-input"
                    id= "statusInactive"
                    value="deactive"
                    name="status"
                    checked = (record.status == "deactive" ? true : false)
                )
                label(for="statusInactive" class="form-check-label") Ngừng Hoạt động
            div(class ="form-group")
                button(
                    type="submit"
                    class="btn btn-primary"
                ) Cập nhật
    else
        p Không tìm thấy dữ liệu
        p 
            a(href=`${prefixAdmin}/accounts/create`
                class="btn btn-secondary"
            ) Tạo tài khoản mới
    script(src="/admin/js/product.js")
