extends ../../layout/default.pug
include ../../mixins/alert.pug
include ../../mixins/selectTree.pug
block main 
    +alert-error(3000)
    if(role.permissions.includes('role_create'))
        h1(class="mb-4") tạo mới vai trò
        form(
            action =`${prefixAdmin}/roles/create`
            method="POST"
        )
            div(class ="form-group")
                label(for="title") Tiêu đề
                input(
                        type="text"
                        class="form-control"
                        id="title"
                        name="title"
                        required
                )
            div(class ="form-group")
                label(for="description") Mô tả
                textarea(
                        class="form-control tinymce-textarea"
                        id="desc"
                        name="description"
                        rows="5"
                )
            div(class ="form-group")
                button(
                    type="submit"
                    class="btn btn-primary"
                ) Thêm mới
    script(src="/admin/js/product.js") 